{
  "name": "eui-goccia",
  "version": "1.0.0",
  "description": "EUI Goccia",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "fix": "pnpm dlx ultracite fix",
    "typecheck": "tsc --noEmit --project .",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "db:up": "docker compose -f docker-compose.db.yml up -d",
    "db:down": "docker compose -f docker-compose.db.yml down",
    "db:purge": "docker compose -f docker-compose.db.yml down -v && rm -rf payload.sqlite"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@payloadcms/db-sqlite": "latest",
    "@payloadcms/live-preview-react": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/plugin-seo": "latest",
    "@payloadcms/richtext-lexical": "latest",
    "@payloadcms/storage-s3": "latest",
    "@payloadcms/translations": "latest",
    "@payloadcms/ui": "latest",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "framer-motion": "^12.23.25",
    "graphql": "^16.12.0",
    "lenis": "^1.3.15",
    "libsql": "^0.5.22",
    "lucide-react": "^0.524.0",
    "mapbox-gl": "^3.17.0",
    "next": "16.0.7",
    "next-intl": "^4.5.8",
    "next-plausible": "^3.12.5",
    "payload": "latest",
    "plaiceholder": "^3.0.0",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "server-only": "^0.0.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^22.19.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "lint-staged": "^16.2.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "ultracite": "6.3.9"
  },
  "engines": {
    "node": ">=22.18.0",
    "pnpm": "^10.24.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "@vercel/speed-insights",
      "bufferutil",
      "esbuild",
      "sharp",
      "utf-8-validate"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  }
}
