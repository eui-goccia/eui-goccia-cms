{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/importMap.js",
			"!**/global.css",
			"!**/.next/**",
			"!**/.vscode/**",
			"!**/(payload)/**",
			"!**/db/**"
		]
	},
	"linter": {
		"enabled": true,
		"includes": [
			"**",
			"!**/global.css",
			"!**/node_modules/**",
			"!**/.turbo/**",
			"!**/payload-types.ts",
			"!**/seed/**"
		],
		"rules": {
			"nursery": {
				"useSortedClasses": "off"
			},
			"recommended": true,
			"a11y": {
				"recommended": true,
				"useButtonType": "error",
				"useKeyWithClickEvents": "error",
				"useValidAnchor": "error"
			},
			"security": {
				"recommended": true,
				"noDangerouslySetInnerHtml": "error"
			},
			"suspicious": {
				"noArrayIndexKey": "error",
				"noExplicitAny": "error"
			},
			"style": {
				"noDefaultExport": "off",
				"useImportType": "error",
				"noNonNullAssertion": "info"
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"formatWithErrors": true,
		"includes": [
			"**",
			"!**/global.css",
			"!**/node_modules/**",
			"!**/.turbo/**",
			"!**/payload-types.ts",
			"!**/seed/**"
		]
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"assist": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingCommas": "es5",
			"semicolons": "always",
			"arrowParentheses": "always"
		}
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	},
	"assist": {
		"enabled": true
	}
}
